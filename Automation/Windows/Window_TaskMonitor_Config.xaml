<Window x:Class="Automation.Window_TaskMonitor_Config"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automation"
        mc:Ignorable="d"
        Title="Task Monitor Configuration Editor" Height="250" Width="500" Background="Black">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="#1A1A1A"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Foreground" Value="Black"/>
            </Style>
        </Grid.Resources>

        <TextBox Name="tbLocationSearch" Grid.Row="0" Grid.Column="0" Text="null" Grid.ColumnSpan="3"/>
        <Button Name="tbSearchForLocation" Content="Search" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" Background="LightYellow"/>

        <Label Grid.Row="1" Grid.Column="0" Content="BaseFolder: " HorizontalAlignment="Right"/>
        <Label Grid.Row="2" Grid.Column="0" Content="ExecutableName: " HorizontalAlignment="Right"/>
        <Label Grid.Row="3" Grid.Column="0" Content="CheckInterval: " HorizontalAlignment="Right"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Arguments: " HorizontalAlignment="Right"/>

        <TextBox Name="tbBaseFolder" Grid.Row="1" Grid.Column="1" Text="null" Grid.ColumnSpan="3"/>
        <TextBox Name="tbExecutableName" Grid.Row="2" Grid.Column="1" Text="null" Grid.ColumnSpan="3"/>
        <TextBox Name="tbCheckInterval" Grid.Row="3" Grid.Column="1" Text="null" Grid.ColumnSpan="3"/>
        <TextBox Name="tbArguments" Grid.Row="4" Grid.Column="1" Text="null" Grid.ColumnSpan="3"/>

        <Button Name="tbCancel" Content="Cancel" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Background="IndianRed"/>
        <Button Name="tbConfirmAndSave" Content="Confirm" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" Background="LightGreen"/>
    </Grid>
</Window>
